[Unit]
Description = /srv on SD card
# trigger mounting when not running with nfsroot
ConditionKernelCommandLine =|!root=/dev/nfs
# disable mount when booting from /dev/sda (qemu)
ConditionKernelCommandLine =!root=/dev/sda
RequiresOverridable = systemd-fsck@dev-mmcblk0p1.service
After = systemd-fsck@dev-mmcblk0p1.service

[Mount]
What = /dev/mmcblk0p1
Where = /srv
Type = ext4
Options = noatime,discard

[Install]
WantedBy = local-fs.target
